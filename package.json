{
	"name": "aninotes-clean-architecture",
	"version": "1.6.0",
	"description": "",
	"author": "JoshAlexis",
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"doppler:dev": "doppler run --forward-signals -- npm run start:dev",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest --verbose",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json --verbose"
	},
	"dependencies": {
		"@nestjs/common": "^10.0.4",
		"@nestjs/config": "^3.0.0",
		"@nestjs/core": "^10.0.2",
		"@nestjs/platform-express": "^10.0.3",
		"@nestjs/swagger": "^7.0.4",
		"@prisma/client": "^4.16.1",
		"argon2": "^0.30.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"dayjs": "^1.11.8",
		"helmet": "^7.0.0",
		"prisma": "^4.15.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^5.0.1",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.6",
		"@commitlint/config-conventional": "^17.6.6",
		"@nestjs/cli": "^10.0.5",
		"@nestjs/schematics": "^10.0.1",
		"@nestjs/testing": "^10.0.1",
		"@types/express": "^4.17.17",
		"@types/jest": "29.5.2",
		"@types/joi": "^17.2.3",
		"@types/node": "^20.3.1",
		"@types/sequelize": "^4.28.15",
		"@types/supertest": "^2.0.11",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.60.0",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.3",
		"jest": "29.5.0",
		"jest-mock-extended": "^3.0.2",
		"prettier": "^2.8.8",
		"source-map-support": "^0.5.20",
		"supertest": "^6.3.3",
		"ts-jest": "29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.2.0",
		"typescript": "^5.1.3",
		"uuid": "^9.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "./src",
		"modulePaths": [
			"<rootDir>"
		],
		"moduleDirectories": [
			"node_modules"
		],
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"packageManager": "yarn@3.6.0"
}
